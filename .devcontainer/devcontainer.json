{
    "name": "Distroless Builder Environment",
    "image": "mcr.microsoft.com/devcontainers/base:bookworm",
    "mounts": [
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
    ],
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {
            "version": "latest",
            "moby": true
        }
    },
    "updateContentCommand": "sudo apt-get update && sudo apt-get -y install --no-install-recommends just",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-azuretools.vscode-docker",
                "hadolint.hadolint",
                "redhat.vscode-yaml",
                "timonwong.shellcheck",
                "skellock.just"
            ]
        }
    },
    "postCreateCommand": "echo 'Welcome! You can now use Docker to build and test images.'",
    "remoteUser": "vscode"
}